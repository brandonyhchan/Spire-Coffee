// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  userName  String @unique
  email     String @unique
  firstName String
  lastName  String
  password  String
}

model Cafe {
  id          Int         @id @default(autoincrement())
  name        String
  street      String
  city        String
  province    Province
  postalCode  String
  phoneNumber String?
  website     String?
  hours       CafeHours[]
}

model CafeHours {
  id        Int      @id @default(autoincrement())
  Cafe      Cafe?    @relation(fields: [cafeId], references: [id])
  cafeId    Int      @unique
  day       Day
  openTime  DateTime
  closeTime DateTime
}

enum Province {
  AB
  BC
  MB
  NB
  NL
  NT
  NS
  NU
  ON
  PE
  QC
  SK
  YT
}

enum Day {
  Monday
  Tuesday
  Wednesday
  Thursday
  Friday
  Saturday
  Sunday
  Holiday
}
