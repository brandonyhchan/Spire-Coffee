generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  userName  String  @unique
  email     String  @unique
  firstName String
  lastName  String
  password  String
  photoName String?
  photoURL  String?
}

model Cafe {
  id              Int            @id @default(autoincrement())
  stringId        String         @unique
  name            String
  street          String
  city            String
  province        Province
  postalCode      String
  latitude        Float?
  longitude       Float?
  phoneNumber     String?
  website         String?
  profilePhotoURL String?
  busyness        filterOptions?
  noisiness       filterOptions?
  price           filterOptions?
}

enum Province {
  AB
  BC
  MB
  NB
  NL
  NT
  NS
  NU
  ON
  PE
  QC
  SK
  YT
}

enum filterOptions {
  LOW
  MEDIUM
  HIGH
}
