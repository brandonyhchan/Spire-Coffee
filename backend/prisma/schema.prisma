// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  userName  String  @unique
  email     String  @unique
  firstName String
  lastName  String
  password  String
  photoName String?
  photoURL  String?
}

model Cafe {
  id               Int      @id @default(autoincrement())
  name             String
  street           String
  city             String
  province         Province
  postalCode       String
  phoneNumber      String?
  website          String?
  profilePhotoName String?
  profilePhotoURL  String?
}

enum Province {
  AB
  BC
  MB
  NB
  NL
  NT
  NS
  NU
  ON
  PE
  QC
  SK
  YT
}
